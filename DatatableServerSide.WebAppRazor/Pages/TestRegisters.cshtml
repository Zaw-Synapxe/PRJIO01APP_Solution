@page
@model DatatableServerSide.WebAppRazor.Pages.TestRegistersModel
@{
    ViewData["Title"] = "Test Registers page";
}

<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<div class="container">

    <p>A simple Visual Studio solution using jQuery DataTable with Server-Side processing using .NET, <a href="https://github.com/DavidSuescunPelegay/jQuery-datatable-server-side-net-core" target="_blank">more info here</a></p>

    <form id="export-to-file-form" method="POST" enctype="application/x-www-form-urlencoded">
    </form>

    <div style="width:90%; margin:0 auto;">
        <table id="test-registers" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>FirstSurname</th>
                    <th>SecondSurname</th>
                    <th>Street</th>
                    <th>Phone</th>
                    <th>ZipCode</th>
                    <th>Country</th>
                    <th>Notes</th>
                    <th>CreationDate</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts
    {
    <script src="~/lib/momentjs/moment.min.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datetime-moment/datetime-moment.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/datatables-buttons/dataTables.buttons.min.js"></script>

    <script src="~/js/testregisters.js" asp-append-version="true"></script>
}

